#!/usr/bin/env python3
"""Run tests for the Sabiana HVAC integration."""

import subprocess
import sys
from pathlib import Path

# Add the project root to the Python path
project_root = Path(__file__).parent.parent
sys.path.insert(0, str(project_root))


def run_tests():
    """Run the test suite."""
    print("Running tests for Sabiana HVAC integration...")

    # Run pytest with the tests directory
    result = subprocess.run(
        [
            sys.executable,
            "-m",
            "pytest",
            "tests/",
            "-v",
            "--tb=short",
            "--asyncio-mode=auto",
        ],
        cwd=project_root,
    )

    if result.returncode != 0:
        print("❌ Tests failed!")
        sys.exit(1)
    else:
        print("✅ All tests passed!")


if __name__ == "__main__":
    run_tests()
